<script>
 // Modal/Slideshow functions copied from Photos page style (plain JS)
 let slideIndex = 1;

 function openModal(m) {
 const modal = document.getElementById(`myModal${m}`);
 if (modal) modal.style.display = 'inline';
 slideIndex = 1;
 showSlides(slideIndex, m);
 }

 function closeModal(m) {
 const modal = document.getElementById(`myModal${m}`);
 if (modal) modal.style.display = 'none';
 }

 function plusSlides(n, m) {
 showSlides(slideIndex += n, m);
 }

 function currentSlide(n, m) {
 showSlides(slideIndex = n, m);
 }

 function showSlides(n, m) {
 const slides = document.getElementsByClassName(`mySlides${m}`);
 let si = n;
 if (si > slides.length) si = 1;
 if (si < 1) si = slides.length;
 for (let i = 0; i < slides.length; i++) {
 slides[i].style.display = 'none';
 }
 if (slides.length > 0) {
 slides[si - 1].style.display = 'block';
 }
 slideIndex = si;
 }
</script>

