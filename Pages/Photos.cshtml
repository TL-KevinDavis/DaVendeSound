<script>
    // Open the Modal
    function openModal(m) {
      document.getElementById("myModal"+m).style.display = "inline";
    }

    // Close the Modal
    function closeModal(m) {
      document.getElementById("myModal"+m).style.display = "none";
      muteVideo();
    }

    function muteVideo(){      
        const videoElements = document.querySelectorAll('video');
        for(let i=0; i < videoElements.length; i++) {
            videoElements[i].muted = true;
            videoElements[i].pause();
            videoElements[i].currentTime = 0;
        }      
    }

    var slideIndex = 1;
    showSlides(slideIndex, 1);

    // Next/previous controls
    function plusSlides(n, m) {
      stopAllVideos();
      showSlides(slideIndex += n, m);
      autoplayCurrentVideo(m);
    }

    // Thumbnail image controls
    function currentSlide(n, m) {
      stopAllVideos();
      showSlides(slideIndex = n, m);
      autoplayCurrentVideo(m);
    }

    function showSlides(n, m) {
      var i;
      var slides = document.getElementsByClassName("mySlides"+m);
      if (n > slides.length) {slideIndex = 1}
      if (n < 1) {slideIndex = slides.length}
      for (i = 0; i < slides.length; i++) {
        slides[i].style.display = "none";
      }
      slides[slideIndex-1].style.display = "block";
    }

    // Stop all videos in the modal when changing slides or closing modal
    function stopAllVideos() {
        const modal = document.querySelector('.modal-content');
        if (!modal) return;
        const videoElements = modal.querySelectorAll('video');
        for(let i=0; i < videoElements.length; i++) {
            videoElements[i].pause();
            videoElements[i].currentTime = 0;
            videoElements[i].muted = true;
        }
    }

    // Autoplay the video in the current slide, always muted
    function autoplayCurrentVideo(m) {
        var slides = document.getElementsByClassName("mySlides"+m);
        var currentSlide = slides[slideIndex-1];
        if (!currentSlide) return;
        var video = currentSlide.querySelector('video');
        if (video) {
            video.muted = true;
            video.play();
        }
    }
</script>
