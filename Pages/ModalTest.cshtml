@page
@model DaVende_Sound.Pages.ModalTestModel
@{
    ViewData["Title"] = "Modal Test";
}


<!DOCTYPE html>
<html>
<head>
    <title>Modal Video Mute</title>
    <style>
        /* Basic modal styling - you'll likely want to customize this */
        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto; /* 15% from the top and centered */
            padding: 20px;
            border: 1px solid #888;
            width: 80%; /* Could be more or less */
            position: relative; /* Needed for close button positioning */
        }

        .close {
            color: #aaa;
            position: absolute;
            top: 10px;
            right: 20px;
            font-size: 28px;
            font-weight: bold;
            text-decoration: none; /* Remove underline from the 'x' */
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }

        /* Style for the video container (optional) */
        .video-container {
            position: relative;
            padding-bottom: 56.25%; /* 16:9 aspect ratio */
            height: 0;
            overflow: hidden;
        }

            .video-container iframe,
            .video-container video {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }
    </style>
</head>
<body>

    <h2>Open Modal</h2>

    <button id="myBtn">Open Modal</button>

    <div id="myModal" class="modal">
        <div class="modal-content">
            <a href="#" class="close">&times;</a>
            <div class="video-container">
                <video id="myVideo" width="640" height="360" controls>
                    <source src="~/images/LofreddoWedding.MP4" type="video/mp4">  Your browser does not support the video tag.
                </video>
            </div>
        </div>
    </div>

    <script>
        // Get the modal
        var modal = document.getElementById("myModal");

        // Get the button that opens the modal
        var btn = document.getElementById("myBtn");

        // Get the <span> element that closes the modal
        var closeBtn = document.querySelector(".close"); // Use querySelector for class

        // Get the video element
        var video = document.getElementById("myVideo");

        // When the user clicks the button, open the modal
        btn.onclick = function() {
          modal.style.display = "block";
          video.play(); // Autoplay when modal opens (optional)
        }

        // When the user clicks on <span> (x), close the modal
        closeBtn.onclick = function() {
          modal.style.display = "none";
          video.pause(); // Pause the video
          video.currentTime = 0; // Reset video to the beginning (optional)
          video.muted = false; // Unmute in case it was muted previously (optional)
        }

        // When the user clicks anywhere outside of the modal content, close it
        window.onclick = function(event) {
          if (event.target == modal) {
            modal.style.display = "none";
            video.pause();
            video.currentTime = 0;
            video.muted = false;
          }
        }


        // Mute function (you can call this separately if needed)
        function muteVideo() {
          video.muted = true;
        }

        // Unmute function (you can call this separately if needed)
        function unmuteVideo() {
          video.muted = false;
        }


    </script>

</body>
</html>